<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_selected_color_container"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/search_bg"
        android:backgroundTint="#BC1717"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_selected_color_container_border"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/corner_transparent_bg"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_selected_color_container"
        app:layout_constraintEnd_toEndOf="@+id/view_selected_color_container"
        app:layout_constraintStart_toStartOf="@+id/view_selected_color_container"
        app:layout_constraintTop_toTopOf="@+id/view_selected_color_container" />




</androidx.constraintlayout.widget.ConstraintLayout>